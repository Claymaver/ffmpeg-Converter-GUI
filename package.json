{
  "name": "ffmpeg-converter-pro",
  "version": "2.0.0",
  "description": "Professional FFmpeg Video Converter with Auto-Installer",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",

    "build:ci": "electron-builder --publish always --config.extraMetadata.buildNumber=$GITHUB_RUN_NUMBER",

    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",

    "dist": "electron-builder",
    "dist-win": "electron-builder --win",
    "dist-mac": "electron-builder --mac",
    "dist-linux": "electron-builder --linux",

    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "ffmpeg",
    "video",
    "converter",
    "electron"
  ],
  "author": "Clay MacDonald",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffprobe-installer/ffprobe": "^2.1.2",
    "fluent-ffmpeg": "^2.1.2"
  },
  "build": {
    "appId": "com.ffmpegconverter.app",
    "productName": "FFmpeg Converter Pro",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "node_modules/@ffmpeg-installer/ffmpeg",
        "to": "ffmpeg-installer",
        "filter": ["**/*"]
      },
      {
        "from": "node_modules/@ffprobe-installer/ffprobe",
        "to": "ffprobe-installer",
        "filter": ["**/*"]
      }
    ],
    "compression": "store",
    "asar": true,
    "asarUnpack": [
      "**/ffmpeg",
      "**/ffprobe"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64"]
        }
      ],
      "category": "public.app-category.video",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "category": "AudioVideo",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FFmpeg Converter Pro",
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico",
      "license": "LICENSE"
    },
    "dmg": {
      "title": "${productName} ${version}",
      "icon": "assets/icon.icns",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "Claymaver",
        "repo": "FFmpeg-Converter-Pro",
        "releaseType": "draft"
      }
    ]
  }
}
